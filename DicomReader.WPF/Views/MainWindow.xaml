<mah:MetroWindow x:Class="DicomReader.WPF.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mvvm="http://prismlibrary.com/"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanResizeWithGrip"
                 mvvm:ViewModelLocator.AutoWireViewModel="True"
                 Title="{Binding Title}" MinHeight="800" Height="800" MinWidth="1100" Width="1100">
    <Grid>
        <TabControl mvvm:RegionManager.RegionName="TabRegion" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectedIndex="{Binding SelectedIndex}" />
    </Grid>
</mah:MetroWindow>