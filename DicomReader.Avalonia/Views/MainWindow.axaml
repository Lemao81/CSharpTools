<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DicomReader.Avalonia.Views"
        xmlns:vm="using:DicomReader.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dd="clr-namespace:DicomReader.Avalonia.Helper;assembly=DicomReader.Avalonia"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="800"
        x:Class="DicomReader.Avalonia.Views.MainWindow"
        d:DataContext="{x:Static dd:DesignData.DesignMainViewModel}"
        Icon="/Assets/dicom.ico"
        Title="DicomReader" MinHeight="800" Height="800" MinWidth="1100" Width="1100">

    <TabControl>
        <TabItem Header="Query" VerticalAlignment="Center" Content="{Binding DicomQueryViewModel}" />
        <TabItem Header="Result" VerticalAlignment="Center" Content="{Binding QueryResultViewModel}" />
        <TabItem Header="Configuration" VerticalAlignment="Center" Content="{Binding PacsConfigurationViewModel}" />
    </TabControl>

</Window>